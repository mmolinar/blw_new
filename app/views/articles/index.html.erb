
    <section id="blog-posts-all">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <% @article.each do |article| %>
                    <div class="col-md-5">
                        <p>
                            <%= image_tag article.pic.url(:medium), class: "img-fluid" %>
                        </p>
                    </div>
                    <div class="col-md-7">
                         <h2>
                            <%= link_to article.title, article%>
                        </h2>
                        <p>
                            <%= article.created_at.strftime("%d %B, %Y") %>
                        </p>
                        <p>
                            <%= link_to article.description.truncate_words(35), article%>
                        </p>
                    </div>
                </div>
                <% end %>
            </div>
            <div class="col=md-3">
               
            </div>
        </div>
    </section>


        <section id="articles">
            <div class="posts-content">
                <div class="header">
                    <p>All Articles</p>

                    <div>
                        <button class="button"><%= link_to "New Article", new_article_path%></button>
                        <button class="button">Log out</button>
                    </div>
                </div>

                <% flash.each do |name, msg| %>
                    <div class="alert alert-success" role="alert">
                        <strong>Well done!</strong> You successfully read this important alert message.
                    </div>
                    <% end %>

                        <%= yield %>
            </div>
        </section>