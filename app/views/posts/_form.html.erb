<%= form_for @post, html: { multipart: true } do |f| %>
    <% if @post.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>Oh snap!</strong> Change a few things up and try submitting again.
        </div>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>
    
    <p>
        <%= f.label :Image %><br>
        <%= f.file_field :pic %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
    
<% end %>